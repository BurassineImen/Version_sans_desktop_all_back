{
  "name": "tunivita-app",
  "version": "1.0.0",
  "description": "Application desktop pour la gestion des produits Tunivita",
  "author": "Votre Nom <votre.email@example.com>",
  "main": "main.js",
  "scripts": {

    "start-frontend": "cd tunvita_VF-main/Tunivita---Totale-Energie-main && npm start",
    "build-frontend": "cd tunvita_VF-main/Tunivita---Totale-Energie-main && npm run build",
    "electron-dev": "concurrently \"npm run start-frontend\" \"electron .\"",
    "rebuild-sqlite": "electron-rebuild -f -w sqlite3",
    "package": "npm run build-frontend && electron-builder --dir",
    "dist": "npm run build-frontend && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-packager . PetroDollarApp --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "build": {
    "appId": "com.PetroDollar.app",
    "productName": "PetroDollar App",
    "files": [
      "main.js",
      "tunvitaBack-main/**/*",
      "tunvita_VF-main/Tunivita---Totale-Energie-main/build/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "tunvitaBack-main/server.js",
        "to": "server.js"
      },
      {
        "from": "tunvitaBack-main/db/database.sqlite",
        "to": "database.sqlite"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "nw": "^0.102.1"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "pdfjs-dist": "^5.4.54",
    "sqlite3": "^5.1.7"
  }
}
